#include <stdio.h>
int  main()
{
int a, b, c, d, e, x;
printf("Введіть три цілих числа\n");
scanf("%d%d%d", &a, &b, &c);
d = a + b + c;
printf("%d+%d+%d=%d", a, b, c, d);
getchar();
printf("\n");
e = a * b * c;
printf("%d*%d*%d=%d", a, b, c, e);
getchar();
printf("\n");
x = (a + b + c)/3;
printf("(%d+%d+%d)/3=%d", a, b, c, x);
getchar();
}
